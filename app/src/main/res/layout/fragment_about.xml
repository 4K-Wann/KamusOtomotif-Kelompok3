<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_kamus"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="16dp" />

        <!-- Nama Aplikasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamoto"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Deskripsi Aplikasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Kamus Istilah Otomotif"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Institusi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTIK C22 FT Universitas Negeri Medan"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Informasi Mata Kuliah -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mata Kuliah:"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemograman Perangkat Bergerak"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Informasi Dosen Pengampu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosen Pengampu:"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tansa Trisna Astono Putri, S.Kom., M.T.I., Ph.D"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Daftar Anggota Kelompok -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anggota Kelompok:"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Afandi Yusuf Lubis\n• Ihsan Heldi Harahap\n• Rizky Abimayu Utama Tanjung\n• Wan Safari Ramadhan"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
